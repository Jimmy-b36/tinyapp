<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a href="/urls" class="nav-item nav-link">My Urls</a>
        <a href="/urls/new" class="nav-item nav-link">Create New URL</a>
      </div>
    </div>
    <% if(!username) {%>
    <form action="/urls/login" method="POST" class="form-inline">
      <label class="sr-only" for="username">Username</label>
      <input
        name="username"
        type="text"
        class="form-control mb-2 mr-sm-2"
        id="username"
        placeholder="Username"
      />

      <label class="sr-only" for="userPassword">Password</label>
      <div class="input-group mb-2 mr-sm-2">
        <input
          name="password"
          type="password"
          class="form-control"
          id="userPassword"
          placeholder="Password"
        />
      </div>

      <button type="submit" value="login" class="btn btn-primary mb-2">
        Submit
      </button>
    </form>
    <% } else {%>
    <div class="d-flex">
      <h4 class="m-2">Logged in as: <%= username%></h4>
      <form action="/urls/logout" method="POST" class="form-inline">
        <button type="submit" value="logout" class="btn btn-danger m-1">
          Logout
        </button>
      </form>
    </div>
    <%}%>
  </nav>
</header>
