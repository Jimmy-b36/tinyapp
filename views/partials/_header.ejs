<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="pageLinks">
      <div class="navbar-nav">
        <a href="/urls" class="nav-item nav-link">My Urls</a>
        <a href="/urls/new" class="nav-item nav-link">Create New URL</a>
        <a href="/register" class="nav-item nav-link">Register</a>
        <% if (username) {%>
        <a href="/login" class="nav-item nav-link">Login</a>
        <% }%>
      </div>
    </div>
    <% if(!username) {%>
    <a href="/login" class="nav-item nav-link btn btn-primary">Login</a>
    <% } else {%>
    <div class="d-flex">
      <h4 class="m-2">Logged in as: <%= username%></h4>
      <form action="/urls/logout" method="POST" class="form-inline">
        <button type="submit" value="logout" class="btn btn-danger m-1">
          Logout
        </button>
      </form>
    </div>
    <%}%>
  </nav>
</header>
